{
  "name": "@db-ui/mono",
  "version": "0.0.0",
  "description": "",
  "workspaces": [
    "packages/*",
    "packages/components/output/*",
    "showcases/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "lint": "npm-run-all -p lint:*",
    "lint:markdownlint": "markdownlint -c .markdown-lint.yml **/*.md",
    "lint:stylelint": "stylelint **/*.scss",
    "lint:xo": "xo --fix",
    "copy:power-apps": "cpr packages/components/output/power-apps build-power-apps -o",
    "update:foundations:assets": "cpr ../base/assets packages/foundations/assets -o",
    "update:foundations:scripts": "cpr ../base/scripts packages/foundations/scripts -o",
    "update:foundations:scss": "cpr ../base/scss packages/foundations/scss -o",
    "update:foundations:tokens": "cpr ../base/tokens packages/foundations/tokens -o",
    "update:foundations:sd-config": "cpr ../base/style-dictionary.config.json packages/foundations/style-dictionary.config.json -o",
    "update:foundations:sd": "cpr ../base/style-dictionary.js packages/foundations/style-dictionary.js -o",
    "update:foundations": "npm-run-all -p update:foundations:*",
    "postupdate:foundations": "replace-in-file packages/foundations/**  --configFile=scripts/base-foundation.js && node scripts/rename-db-ui-base.js",
    "update:components:button": "cpr ../core/source/_patterns/01-elements/buttons/button.scss packages/components/src/components/button/button.scss -o",
    "update:components:card": "cpr ../core/source/_patterns/02-components/cards/card.scss packages/components/src/components/card/card.scss -o",
    "update:components:cards": "cpr ../core/source/_patterns/02-components/cards/cards.scss packages/components/src/components/cards/cards.scss -o",
    "update:components": "npm-run-all -p update:core:*",
    "build:foundations": "npm run build --workspace=@db-ui/foundations",
    "build:components": "npm run build --workspace=@db-ui/components",
    "build": "npm-run-all build:*",
    "build-outputs:components": "npm run copy-output --workspace=@db-ui/components",
    "build-outputs:ngx-components": "npm run build --workspace=@db-ui/ngx-components",
    "build-outputs:react-components": "npm run build --workspace=@db-ui/react-components",
    "build-outputs:foundations": "npm run copy-build --workspace=@db-ui/foundations",
    "build-outputs": "npm-run-all -p build-outputs:*",
    "build-showcases:angular-lts-showcase": "npm run build --workspace=angular-lts-showcase",
    "build-showcases:react-showcase": "npm run build --workspace=react-showcase",
    "build-showcases": "npm-run-all -p build-showcases:*",
    "start:foundations": "npm run start --workspace=@db-ui/foundations",
    "start:components": "npm run start --workspace=@db-ui/components",
    "start-showcase:angular-lts": "npm run dev --workspace=angular-lts-showcase",
    "start-showcase:next": "npm run dev --workspace=next-showcase",
    "start-showcase:react": "npm run dev --workspace=react-showcase",
    "start-showcase:svelte": "npm run dev --workspace=svelte-showcase",
    "start-showcase:vanilla": "npm run dev --workspace=vanilla-showcase",
    "start-showcase:vue": "npm run dev --workspace=vue-showcase",
    "start": "node scripts/start.js"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "cpr": "3.0.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.0",
    "husky": "8.0.2",
    "inquirer": "^9.1.4",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.1",
    "pretty-quick": "3.1.3",
    "replace-in-file": "^6.3.5",
    "stylelint": "14.16.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-sass-guidelines": "9.0.1",
    "typescript": "^4.7.3",
    "validate-branch-name": "^1.3.0",
    "xo": "^0.53.1"
  },
  "validate-branch-name": {
    "pattern": "((dbux-3)|(dependabot-)|^((test|feat|fix|chore|docs|refactor|style|ci|perf|[0-9]+)\\-[a-zA-Z0-9\\-]+)$)",
    "errorMsg": "There is something wrong with your branch name. You should rename your branch to a valid name and try again. See the Pattern below."
  },
  "bugs": {
    "url": "https://github.com/db-ui/one/issues"
  },
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/db-ui/mono"
  },
  "homepage": "https://db-ui.github.io/mono/",
  "private": true
}
