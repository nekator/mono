{
  "name": "vanilla-showcase",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:01_vite": "vite build",
    "build:02_generate": "node scripts/generate-routes.js",
    "build:03_copy": "cpy dist ../../build-showcases/vanilla-showcase",
    "copy:assets": "cpy ../../packages/foundations/assets public",
    "copy:colors": "cpy ../../packages/foundations/build/css/colors/classes/all.css public/styles/colors/classes",
    "copy:components": "cpy ../../packages/components/build/components public",
    "copy:styles": "cpy ../../packages/components/build/styles/db-ui-42.css public/styles",
    "dev": "vite --open",
    "prebuild": "npm-run-all -p copy:*",
    "predev": "npm-run-all -p copy:*",
    "start": "vite"
  },
  "devDependencies": {
    "cpy": "^11.0.1",
    "cpy-cli": "^5.0.0",
    "npm-run-all": "4.1.5",
    "vite": "^5.3.1"
  }
}
